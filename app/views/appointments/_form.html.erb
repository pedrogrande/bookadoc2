<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :start_time %>
    <%= f.input :reason %>
   

    <label class="select optional control-label" for="appointment_doctor_id">Doctor</label>

    <select class="select optional form-control" name="appointment[doctor_id]" id="appointment_doctor_id">
      <option value=""></option>
      <% @doctors.each do |doctor| %>
        <% if doctor.doctor_profile %>
          <option value="<%= doctor.id %>"><%= doctor.doctor_profile.doctor_identity %></option>
        <% end %>
      <% end %>
     
    </select>



  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
